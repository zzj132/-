
h5 {
		color: #ccc;
}
.box {
		width: 100%;
		height: 600rpx;
		box-sizing: border-box;
		margin-bottom: 150rpx;
		border: 2px solid dodgerblue;
}
.box1 {

		width: 100%;
		height: 150rpx;
		box-sizing: border-box;
		margin-bottom: 20rpx;
		border: 2px solid dodgerblue;
}
.item {
		box-sizing: border-box;
		padding: 10rpx;
		border-bottom: 4px solid #ccc;
}
.item1 {

		height: 150rpx;
		box-sizing: border-box;
		padding: 10rpx;
		display: flex;
		justify-content: center;
		/* 水平居中 */
}
.item:active {
		background-color: #66afe9;
}

	/* 基础按钮样式 */
.button {
		position: absolute;
		bottom: 150;
		/* 将按钮放置在底部 */

		margin: 5% 10% 5% 10%;

		padding: 10px 80px;
		font-size: 16px;

		text-align: center;
		text-decoration: none;
		outline: none;
		color: #fff;
		border: none;
		border-radius: 8px;
		background-color: #66afe9;
}



	/* 按钮按下效果 */
.button:active {
		background-color: #66afe9;
		box-shadow: 0 5px #666;
}
